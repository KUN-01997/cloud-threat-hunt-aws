<group name="custom, mitre">
  <rule id="100030" level="5">
    <decoded_as>json</decoded_as>
    <field name="full_log">*ip addr*</field>
    <description>T1016 - Network Configuration Discovery</description>
    <mitre>
      <id>T1016</id>
      <tactic>Discovery</tactic>
      <technique>Network Configuration Discovery</technique>
    </mitre>
  </rule>
  <rule id="100031" level="5">
    <decoded_as>json</decoded_as>
    <field name="full_log">*ps aux*</field>
    <description>T1057 - Process Discovery</description>
    <mitre>
      <id>T1057</id>
      <tactic>Discovery</tactic>
      <technique>Process Discovery</technique>
    </mitre>
  </rule>
  <rule id="100032" level="10">
    <decoded_as>json</decoded_as>
    <field name="full_log">*cat /etc/shadow*</field>
    <description>T1003.008 - /etc/shadow Access</description>
    <mitre>
      <id>T1003.008</id>
      <tactic>Credential Access</tactic>
      <technique>Credential Dumping: /etc/shadow</technique>
    </mitre>
  </rule>
  <rule id="100033" level="5">
    <decoded_as>json</decoded_as>
    <field name="full_log">*find /etc*</field>
    <description>T1083 - File and Directory Discovery</description>
    <mitre>
      <id>T1083</id>
      <tactic>Discovery</tactic>
      <technique>File and Directory Discovery</technique>
    </mitre>
  </rule>
  <rule id="100034" level="7">
    <decoded_as>json</decoded_as>
    <field name="full_log">*cron.d*</field>
    <description>T1053.003 - Scheduled Task via Cron</description>
    <mitre>
      <id>T1053.003</id>
      <tactic>Persistence</tactic>
      <technique>Scheduled Task/Job: Cron</technique>
    </mitre>
  </rule>
</group>
